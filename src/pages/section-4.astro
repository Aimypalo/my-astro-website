---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
---

<Layout title="Section 4">
  <main>
    <h1><span class="text-gradient">Focus: Next year goals</span></h1>
		<div class="instructions">
			What are your goals for your career over the next 12 months?
    </div>

    <div class="instructions">
			<p>
        <strong>1.</strong> Muse Tooling improvements.
      </p>
		</div>

    <Button
      href="/my-astro-website/"
      title="&larr; Home"
    />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: #444;
		padding: 1rem;
		border-radius: 0.4rem;
  }
  .instructions strong {
		color: rgb(var(--accent));
	}
</style>
